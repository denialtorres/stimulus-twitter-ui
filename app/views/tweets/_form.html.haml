=form_with(model: @tweet, data: { controller: "tweet-form" }) do |f|
  - if @tweet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tweet.errors.count, "error")} prohibited this tweet from being saved:"
      %ul
        - @tweet.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.text_area :body, class: "form-control", placeholder: "Tweet your thoughts...", data: { target: "tweet-form.body", action: "keyup->tweet-form#update"}
  .form-group
    .row
      .col-sm-6
        .span{"data-target" => "tweet-form.characterCount"}
      .col-sm-6.text-right
        = f.submit class: 'btn btn-primary '
