=form_with(model: @tweet) do |f|
  - if @tweet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tweet.errors.count, "error")} prohibited this tweet from being saved:"
      %ul
        - @tweet.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.text_area :body, class: "form-control", placeholder: "Tweet your thoughts..."
  .form-group
    .row
      .col-sm-6
      .col-sm-6.text-right
        = f.submit class: 'btn btn-primary '
